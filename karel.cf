ConstLiteral.   Constant ::= Literal ;
ConstIdent.     Constant ::= Ident ;

-- Semicolons are now mandatory for all declarations and statements

token QuotedString '\'' ((char - ["'\\"]) | ('\\' ["'\\nt"]) )* '\'' ;
